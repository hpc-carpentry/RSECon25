% Robust Carpentries red block
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newenvironment{carpblockred}[1][]%
{%
	\par\vspace{1ex}%
		\centering
		\begin{tikzpicture}
			\node[
			align=left,
			draw=carpred,
			very thick,
			rounded corners=4pt,
			left color=carpred!50,
			right color=carpred!5,
			shading angle=60,
			inner sep=6pt,
			text width=0.9\linewidth
			] (box) \bgroup
			\begin{minipage}{0.85\linewidth}
				\ifx\relax#1\relax
				\else
				{\bfseries #1}\\[-2ex]%
				\fi
			}%
			{%
			\end{minipage}
			\egroup;
		\end{tikzpicture}%

	\vspace{1ex}\par
}

